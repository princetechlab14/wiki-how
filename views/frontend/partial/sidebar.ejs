<aside>
    <button id="openSidebarBtn"
        class="md:hidden fixed top-2 left-2 z-50 p-1 bg-sky-500 rounded-full shadow-md hover:bg-cyan-200">
        <i class="fa-solid fa-bars text-white p-1"></i>
    </button>

    <div id="leftSidebar" class="fixed top-0 left-0 w-64 h-full shadow-lg transform transition-transform duration-300
           -translate-x-full md:translate-x-0 z-40 bg-sky-500">

        <div class="flex justify-between items-center px-4 py-4 border-b ">
            <h2 class="text-xl font-bold text-white">Wiki-How</h2>
            <button id="closeSidebarBtn" class="text-gray-600 hover:text-black md:hidden">
                <i class="fas fa-times w-6 h-6 text-3xl text-white"></i>
            </button>
        </div>

        <ul class="space-y-2 font-medium m-1 py-2 border-b">
            <li>
                <a href="/"
                    class="flex items-center p-2 rounded-lg text-white hover:bg-sky-400 dark:hover:bg-sky-700 group text-md">
                    <i class="fa fa-home transition duration-75 group-hover:text-gray-100 text-xl"></i>
                    <span class="ms-3 font-bold">Home</span>
                </a>
            </li>
            <li>
                <a href="/"
                    class="flex items-center p-2 rounded-lg text-white hover:bg-sky-400 dark:hover:bg-sky-700 group text-md">
                    <i class="fa fa-gear transition duration-75 group-hover:text-gray-100 text-xl"></i>
                    <span class="ms-3 font-bold">New Games</span>
                </a>
            </li>
            <li>
                <a href="/"
                    class="flex items-center p-2 rounded-lg text-white hover:bg-sky-400 dark:hover:bg-sky-700 group text-md">
                    <i class="fa fa-chart-simple transition duration-75 group-hover:text-gray-100 text-xl"></i>
                    <span class="ms-3 font-bold">Featured</span>
                </a>
            </li>
        </ul>

        <ul class="space-y-2 font-medium">
            <% sidebarCategories?.forEach((category, index)=> { %>
                <li>
                    <a href="/category/<%= category.slug %>"
                        class="flex items-center p-2 rounded-lg text-white hover:bg-sky-400 dark:hover:bg-sky-700 group text-md">
                        <i class="<%= category.icon %> transition duration-75 group-hover:text-gray-100 text-xl"></i>
                        <span class="ms-3 font-bold">
                            <%= category.name %>
                        </span>
                    </a>
                </li>
                <% }) %>
        </ul>
    </div>
</aside>